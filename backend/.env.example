# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="System Design Coach"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"
API_V1_PREFIX="/api/v1"
SECRET_KEY="your-super-secret-key-change-in-production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1
RELOAD=true

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/sdcoach"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# OpenAI Configuration (REQUIRED - Get your API key from https://platform.openai.com)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_EVALUATION_TEMPERATURE=0.3
OPENAI_FEEDBACK_TEMPERATURE=0.6
OPENAI_QUESTION_TEMPERATURE=0.8

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
LANGCHAIN_PROJECT="system-design-coach"

# Vector Database Configuration
VECTOR_DIMENSION=1536  # OpenAI text-embedding-3-small
VECTOR_INDEX_TYPE="ivfflat"

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=".pdf,.docx,.txt,.png,.jpg,.jpeg,.mp3,.wav,.m4a"
UPLOAD_DIRECTORY="./uploads"

# Audio Processing Configuration
WHISPER_MODEL="base"
AUDIO_MAX_DURATION_SECONDS=300

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring Configuration
ENABLE_METRICS=true
SENTRY_DSN=""
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Authentication & Security
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/callback"

# External Services
HEALTH_CHECK_TIMEOUT=5
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Session Management Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=30

# AI Service Configuration
AI_MEMORY_WINDOW=20
AI_MAX_CONVERSATION_LENGTH=100
AI_PERFORMANCE_WINDOW=5
AI_DIFFICULTY_THRESHOLD=0.3
AI_OPENAI_TIMEOUT=30
